{
  "name": "yoink",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "turbo run test --filter=!@yoink/acceptance-tests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "quality": "turbo run lint build typecheck test --filter=!@yoink/acceptance-tests",
    "e2e:test": "./scripts/e2e-test.sh",
    "dev": "turbo run dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^3.2.0",
    "eslint": "^10.0.1",
    "eslint-plugin-boundaries": "^5.4.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "sharp": "^0.34.5",
    "turbo": "^2.7.6",
    "typescript": "^5.7.0",
    "vitest": "^3.2.0"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "minimatch": ">=10.2.1",
      "@isaacs/brace-expansion": ">=5.0.1"
    },
    "auditConfig": {
      "ignoreCves": [
        "CVE-2026-25223"
      ]
    }
  }
}
