{
  "name": "yoink",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "turbo run test --filter=!@yoink/acceptance-tests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "quality": "turbo run build typecheck test --filter=!@yoink/acceptance-tests",
    "e2e:test": "./scripts/e2e-test.sh",
    "dev": "turbo run dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.0",
    "husky": "^9.1.7",
    "sharp": "^0.34.5",
    "turbo": "^2.7.1",
    "typescript": "^5.7.0",
    "vitest": "^3.2.0"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.0"
}
